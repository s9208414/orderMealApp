<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="桌號:"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_meal"/>

    <TextView
        android:id="@+id/tv_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="主食"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_meal"
        app:layout_constraintEnd_toEndOf="@+id/tv_num"
        app:layout_constraintStart_toStartOf="@+id/tv_num"
        app:layout_constraintTop_toBottomOf="@+id/tv_num" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_meal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_meal"
        app:layout_constraintStart_toStartOf="@+id/tv_meal"
        app:layout_constraintEnd_toEndOf="@+id/tv_meal"
        app:layout_constraintBottom_toTopOf="@+id/tv_sideDish"/>

    <TextView
        android:id="@+id/tv_sideDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="副餐"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_meal"
        app:layout_constraintStart_toStartOf="@+id/rv_meal"
        app:layout_constraintEnd_toEndOf="@+id/rv_meal"
        app:layout_constraintBottom_toTopOf="@+id/rv_sideDish"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sideDish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sideDish"
        app:layout_constraintStart_toStartOf="@+id/tv_sideDish"
        app:layout_constraintEnd_toEndOf="@+id/tv_sideDish"
        app:layout_constraintBottom_toTopOf="@+id/btn_sendOrder"/>
    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="總金額:"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_sideDish"
        app:layout_constraintStart_toStartOf="@+id/rv_sideDish"
        app:layout_constraintEnd_toEndOf="@+id/rv_sideDish"
        app:layout_constraintBottom_toTopOf="@+id/btn_sendOrder"/>
    <Button
        android:id="@+id/btn_sendOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="送出訂單"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sum"
        app:layout_constraintStart_toStartOf="@+id/tv_sum"
        app:layout_constraintEnd_toEndOf="@+id/tv_sum"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>