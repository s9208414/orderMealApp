<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="桌號:"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_meal"/>
    <TextView
        android:id="@+id/tv_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主食(請選一項)"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num"
        app:layout_constraintStart_toStartOf="@+id/tv_num"
        app:layout_constraintEnd_toEndOf="@+id/tv_num"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_meal"
        app:layout_constraintStart_toStartOf="parent">
        <RadioButton
            android:id="@+id/rb_beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牛排"/>
        <RadioButton
            android:id="@+id/rb_pork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豬排"/>
        <RadioButton
            android:id="@+id/rb_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魚排"/>
    </RadioGroup>
    <TextView
        android:id="@+id/tv_sideDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="副餐(請至少選擇一項)"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="@id/radioGroup"/>
    <CheckBox
        android:id="@+id/cb_salad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="沙拉"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sideDish"
        app:layout_constraintStart_toStartOf="@id/tv_sideDish"/>
    <CheckBox
        android:id="@+id/cb_cornSoup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="玉米濃湯"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cb_salad"
        app:layout_constraintStart_toStartOf="@id/cb_salad"/>
    <CheckBox
        android:id="@+id/cb_potato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="馬鈴薯"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cb_cornSoup"
        app:layout_constraintStart_toStartOf="@id/cb_cornSoup"/>
    <CheckBox
        android:id="@+id/cb_spaghetti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="義大利麵"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cb_potato"
        app:layout_constraintStart_toStartOf="@id/cb_potato"/>
    <Button
        android:id="@+id/btn_add2Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加到購物車"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cb_spaghetti"
        app:layout_constraintStart_toStartOf="@id/cb_spaghetti"/>

</androidx.constraintlayout.widget.ConstraintLayout>