<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_order">
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="桌號:"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_meal"/>
    <TextView
        android:id="@+id/tv_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主食(請選一項)"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num"
        app:layout_constraintStart_toStartOf="@+id/tv_num"
        app:layout_constraintEnd_toEndOf="@+id/tv_num"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_meal"
        app:layout_constraintStart_toStartOf="parent">

    </RadioGroup>
    <TextView
        android:id="@+id/tv_sideDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="副餐(請至少選擇一項)"
        android:textSize="22sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="@id/radioGroup"/>

    <Button
        android:id="@+id/btn_add2Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加到訂單"
        android:textSize="22sp"
        android:layout_margin="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>