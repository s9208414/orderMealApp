<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_num_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="員工編號:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_manager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="職位:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_manager"
        app:layout_constraintLeft_toRightOf="@+id/tv_num_manager"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_manager"
        android:text="員工資訊"
        android:textSize="18sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_col"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_col"
        android:text="員編               姓名                  職位"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_manager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_manager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_col"
        app:layout_constraintStart_toStartOf="@+id/tv_col" />
    <EditText
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:id="@+id/et_num"
        android:hint="員編"
        app:layout_constraintTop_toBottomOf="@+id/rv_manager"
        app:layout_constraintStart_toStartOf="@+id/tv_col"/>
    <EditText
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:hint="姓名"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_manager"
        app:layout_constraintStart_toEndOf="@+id/et_num"/>
    <EditText
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:id="@+id/et_position"
        android:hint="職位"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_manager"
        app:layout_constraintStart_toEndOf="@+id/et_name"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增"
        android:id="@+id/btn_add_manager"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_manager"
        app:layout_constraintStart_toEndOf="@+id/et_position"
        />
</androidx.constraintlayout.widget.ConstraintLayout>